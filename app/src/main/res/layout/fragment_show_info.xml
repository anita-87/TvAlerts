<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ShowInfoFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_marginEnd="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin"
        android:elevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_round_corners">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:text="@string/string_details"
                android:textSize="@dimen/card_header_text_size"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_sans_serif_condensed"
                android:letterSpacing="0.25"/>

            <!-- First Row : Network -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:text="@string/string_network"
                android:textSize="@dimen/card_detail_subtitle"
                android:fontFamily="@string/font_family_sans_serif_condensed"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:letterSpacing="0.15"/>

            <TextView
                android:id="@+id/tv_show_details_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_details_row_margin_top"
                android:textSize="@dimen/card_details_text_size"
                android:fontFamily="@string/font_family_sans_serif" />

            <!-- Second Row : Type / Status / Language -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/card_margin"
                        android:layout_marginTop="@dimen/card_margin"
                        android:text="@string/string_type"
                        android:textSize="@dimen/card_detail_subtitle"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:fontFamily="@string/font_family_sans_serif_condensed"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:id="@+id/tv_show_details_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/card_margin"
                        android:layout_marginTop="@dimen/card_details_row_margin_top"
                        android:textSize="@dimen/card_details_text_size"
                        android:fontFamily="@string/font_family_sans_serif" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/card_margin"
                        android:layout_marginTop="@dimen/card_margin"
                        android:text="@string/string_status"
                        android:textSize="@dimen/card_detail_subtitle"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:fontFamily="@string/font_family_sans_serif_condensed"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:id="@+id/tv_show_details_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/card_margin"
                        android:layout_marginTop="@dimen/card_details_row_margin_top"
                        android:textSize="@dimen/card_details_text_size"
                        android:fontFamily="@string/font_family_sans_serif" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/card_margin"
                        android:layout_marginTop="@dimen/card_margin"
                        android:text="@string/string_language"
                        android:textSize="@dimen/card_detail_subtitle"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:fontFamily="@string/font_family_sans_serif_condensed"
                        android:letterSpacing="0.15"/>

                    <TextView
                        android:id="@+id/tv_show_details_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/card_margin"
                        android:layout_marginTop="@dimen/card_details_row_margin_top"
                        android:textSize="@dimen/card_details_text_size"
                        android:fontFamily="@string/font_family_sans_serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- Third Row : Genres -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:text="@string/string_genres"
                android:textSize="@dimen/card_detail_subtitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_sans_serif_condensed"
                android:letterSpacing="0.15"/>

            <TextView
                android:id="@+id/tv_show_details_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_details_row_margin_top"
                android:textSize="@dimen/card_details_text_size"
                android:fontFamily="@string/font_family_sans_serif"/>

            <!-- Forth Row : Premiered -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:text="@string/string_premiered"
                android:textSize="@dimen/card_detail_subtitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_sans_serif_condensed"
                android:letterSpacing="0.15"/>

            <TextView
                android:id="@+id/tv_show_details_premiered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_details_row_margin_top"
                android:textSize="@dimen/card_details_text_size"
                android:fontFamily="@string/font_family_sans_serif"/>

            <!-- Fifth Row : Schedule -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:text="@string/string_schedule"
                android:textSize="@dimen/card_detail_subtitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_sans_serif_condensed"
                android:letterSpacing="0.15"/>

            <TextView
                android:id="@+id/tv_show_details_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_details_row_margin_top"
                android:layout_marginBottom="@dimen/card_details_row_margin_top"
                android:textSize="@dimen/card_details_text_size"
                android:fontFamily="@string/font_family_sans_serif" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_marginEnd="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin"
        android:elevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_round_corners">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:text="@string/string_summary"
                android:textSize="@dimen/card_header_text_size"
                android:textStyle="bold"
                android:fontFamily="@string/font_family_sans_serif_condensed"
                android:letterSpacing="0.25"/>

            <TextView
                android:id="@+id/tv_show_details_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginEnd="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin"
                android:fontFamily="@string/font_family_sans_serif"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>